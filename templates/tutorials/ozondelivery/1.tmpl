        }

        function odlBack() {
            if (odlCurrent === 'completed') {
                odlGoTo('confirm');
                return;
            }
            if (odlCurrent === 'confirm') {
                odlGoTo('payment');
                return;
            }
            const idx = odlGetIndex(odlCurrent);
            if (idx > 0) odlGoTo(odlOrder[idx - 1]);
        }

        function odlForward() {
            if (odlCurrent === 'completed') return;
            if (odlCurrent === 'confirm') {
                odlGoTo('completed');
                return;
            }
            const idx = odlGetIndex(odlCurrent);
            if (idx >= 0 && idx < odlOrder.length - 1) {
                odlGoTo(odlOrder[idx + 1]);
                return;
            }
            if (odlCurrent === 'payment') odlGoTo('confirm');
        }

        odlEls.checkoutBtn.addEventListener('click', () => odlHandle('checkout'));

        odlEls.deliveryCourier.addEventListener('click', () => odlHandle('select-delivery', 'courier'));
