            if (cfg.action === 'select-payment' && action === 'select-payment') {
                if (payload === 'card') odlState.payment = '–ö–∞—Ä—Ç–æ–π –æ–Ω–ª–∞–π–Ω';
                if (payload === 'sbp') odlState.payment = '–°–ë–ü';
