        odlEls.addressHome.addEventListener('click', () => odlHandle('select-address', 'home'));
        odlEls.addressPvz.addEventListener('click', () => odlHandle('select-address', 'pvz'));

        odlEls.paymentCard.addEventListener('click', () => odlHandle('select-payment', 'card'));
        odlEls.paymentSbp.addEventListener('click', () => odlHandle('select-payment', 'sbp'));
        odlEls.paymentCash.addEventListener('click', () => odlHandle('select-payment', 'cash'));

        odlEls.confirmBtn.addEventListener('click', () => odlHandle('confirm-order'));

        odlEls.prev.addEventListener('click', odlBack);
        odlEls.next.addEventListener('click', odlForward);
        odlEls.restart.addEventListener('click', () => {
            odlState.delivery = '–î–æ—Å—Ç–∞–≤–∫–∞ –∫—É—Ä—å–µ—Ä–æ–º';
            odlState.address = '—É–ª. –õ–µ–Ω–∏–Ω–∞, –¥. 10, –∫–≤. 15';
            odlState.payment = '–ü—Ä–∏ –ø–æ–ª—É—á–µ–Ω–∏–∏';
            odlGoTo('checkout');
        });

        odlEls.introStart.addEventListener('click', () => {
            if (odlStarted) return;
            odlStarted = true;
            odlEls.introScreen.classList.add('odl-hidden');
            odlEls.layout.classList.remove('is-hidden');
            odlGoTo('checkout');
        });

        window.addEventListener('resize', odlPositionHint);
