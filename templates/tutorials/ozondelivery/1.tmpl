                return;
            }

            if (cfg.action === 'select-address' && action === 'select-address') {
                if (payload === 'home') {
                    odlState.address = '—É–ª. –õ–µ–Ω–∏–Ω–∞, –¥. 10, –∫–≤. 15';
                } else {
