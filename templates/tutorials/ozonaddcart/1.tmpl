                note: '–¢–µ–ø–µ—Ä—å –º–æ–∂–Ω–æ –ø–µ—Ä–µ–π—Ç–∏ –∫ –æ—Ñ–æ—Ä–º–ª–µ–Ω–∏—é –¥–æ—Å—Ç–∞–≤–∫–∏ –≤ —Å–ª–µ–¥—É—é—â–µ–º –º–æ–¥—É–ª–µ.',
                screen: 'cart',
                action: null,
                hint: null
            }
        };

        const oacOrder = ['open-search', 'pick-suggestion', 'pick-product', 'add-cart'];

        const oacEls = {
            screens: {
                home: document.getElementById('oac-screen-home'),
                search: document.getElementById('oac-screen-search'),
                results: document.getElementById('oac-screen-results'),
                product: document.getElementById('oac-screen-product'),
                cart: document.getElementById('oac-screen-cart')
            },
            searchTrigger: document.getElementById('oac-search-trigger'),
            searchText: document.getElementById('oac-search-text'),
            maleSuggestion: document.getElementById('oac-suggestion-male'),
            productTarget: document.getElementById('oac-product-target'),
            addBtn: document.getElementById('oac-add-btn'),
            tabHome: document.getElementById('oac-tab-home'),
            tabCart: document.getElementById('oac-tab-cart'),
            progress: document.getElementById('oac-progress'),
            step: document.getElementById('oac-step'),
            title: document.getElementById('oac-title'),
            desc: document.getElementById('oac-desc'),
            note: document.getElementById('oac-note'),
            nav: document.getElementById('oac-nav'),
            prev: document.getElementById('oac-prev'),
            next: document.getElementById('oac-next'),
            restart: document.getElementById('oac-restart'),
            hint: document.getElementById('oac-hint'),
            introScreen: document.getElementById('oac-intro-screen'),
            introStart: document.getElementById('oac-intro-start'),
            layout: document.getElementById('oac-layout')
        };

        let oacCurrent = 'open-search';
        let oacHintConfig = null;
        let oacStarted = false;

        function oacGetIndex(stepKey) {
            return oacOrder.indexOf(stepKey);
        }

        function oacEnsureProgress() {
            const count = oacOrder.length;
            oacEls.progress.style.setProperty('--oac-segments', String(count));
            if (oacEls.progress.childElementCount === count) return;
            oacEls.progress.innerHTML = '';
            for (let i = 0; i < count; i += 1) {
                const seg = document.createElement('span');
                seg.className = 'oac-progress-segment';
                oacEls.progress.appendChild(seg);
            }
        }

        function oacUpdateProgress(stepKey) {
            oacEnsureProgress();
            const isDone = stepKey === 'completed';
            const idx = oacGetIndex(stepKey);
            const currentIdx = isDone ? oacOrder.length - 1 : idx;
            Array.from(oacEls.progress.children).forEach((seg, segIdx) => {
                seg.classList.remove('done', 'current');
                if (isDone || segIdx < currentIdx) seg.classList.add('done');
                else if (segIdx === currentIdx) seg.classList.add('current');
            });
        }

        function oacSetScreen(screenKey) {
            Object.values(oacEls.screens).forEach((screen) => screen.classList.remove('active'));
            if (oacEls.screens[screenKey]) oacEls.screens[screenKey].classList.add('active');

            const cartActive = screenKey === 'cart';
            oacEls.tabHome.classList.toggle('active', !cartActive);
            oacEls.tabCart.classList.toggle('active', cartActive);
        }

        function oacUpdateHeaderSearch(stepKey) {
            if (stepKey === 'open-search') {
                oacEls.searchText.textContent = '–ò—Å–∫–∞—Ç—å –Ω–∞ Ozon';
                oacEls.searchTrigger.classList.remove('active');
                return;
            }

            oacEls.searchText.textContent = '—Ç—ë–ø–ª—ã–µ –Ω–æ—Å–∫–∏';
            oacEls.searchTrigger.classList.add('active');
        }

        function oacPositionHint() {
            if (!oacHintConfig || !oacHintConfig.id) {
                oacEls.hint.style.display = 'none';
                return;
            }

            const target = document.getElementById(oacHintConfig.id);
            if (!target) {
                oacEls.hint.style.display = 'none';
                return;
            }

            const rect = target.getBoundingClientRect();
            if (!rect.width || !rect.height) {
                oacEls.hint.style.display = 'none';
                return;
            }

            const padding = Number(oacHintConfig.padding || 0);
            const radius = Number(oacHintConfig.radius || 12);
            oacEls.hint.style.display = 'block';
            oacEls.hint.style.left = `${rect.left - padding}px`;
            oacEls.hint.style.top = `${rect.top - padding}px`;
            oacEls.hint.style.width = `${rect.width + padding * 2}px`;
            oacEls.hint.style.height = `${rect.height + padding * 2}px`;
            oacEls.hint.style.borderRadius = `${radius}px`;
        }

        function oacApplyHint(hint) {
            if (!hint || !hint.id) {
                oacHintConfig = null;
                oacEls.hint.style.display = 'none';
                return;
            }

            oacHintConfig = {
                id: String(hint.id),
                padding: Number(hint.padding || 0),
                radius: Number(hint.radius || 12)
            };

            requestAnimationFrame(oacPositionHint);
            setTimeout(oacPositionHint, 0);
        }

        function oacUpdateInfo(stepKey) {
            const cfg = oacSteps[stepKey];
            oacEls.step.textContent = cfg.step;
            oacEls.title.textContent = cfg.title;
            oacEls.desc.textContent = cfg.desc;
            oacEls.note.textContent = cfg.note;

            if (stepKey === 'completed') {
                oacEls.nav.style.display = 'none';
                oacEls.restart.style.display = 'inline-flex';
            } else {
                oacEls.nav.style.display = 'grid';
                oacEls.restart.style.display = 'none';
                const idx = oacGetIndex(stepKey);
                oacEls.prev.disabled = idx <= 0;
                oacEls.next.disabled = stepKey === 'pick-suggestion';
            }

            oacUpdateProgress(stepKey);
        }

        function oacGoTo(stepKey) {
            if (!oacSteps[stepKey]) return;

            if (stepKey !== 'pick-product') {
                oacEls.productTarget.classList.remove('selected');
            }
            if (stepKey !== 'pick-suggestion') {
                oacEls.maleSuggestion.classList.remove('selected');
            }
            if (stepKey !== 'add-cart' && stepKey !== 'completed') {
                oacEls.addBtn.textContent = '–í –∫–æ—Ä–∑–∏–Ω—É';
                oacEls.addBtn.classList.remove('done');
            }

            oacCurrent = stepKey;
            const cfg = oacSteps[stepKey];
            oacSetScreen(cfg.screen);
            oacUpdateHeaderSearch(stepKey);
            oacUpdateInfo(stepKey);
            oacApplyHint(cfg.hint);
        }

        function oacNextFromCurrent() {
            const idx = oacGetIndex(oacCurrent);
            if (idx >= 0 && idx < oacOrder.length - 1) {
                oacGoTo(oacOrder[idx + 1]);
            } else if (oacCurrent === 'add-cart') {
                oacGoTo('completed');
            }
        }

        function oacHandle(action) {
            const cfg = oacSteps[oacCurrent];
            if (!cfg || !cfg.action || cfg.action !== action) return;

            if (action === 'open-search') {
                oacEls.searchTrigger.classList.add('active');
                oacEls.searchText.textContent = '—Ç—ë–ø–ª—ã–µ –Ω–æ—Å–∫–∏';
                setTimeout(() => {
                    oacNextFromCurrent();
                }, 250);
                return;
            }

            if (action === 'pick-male-suggestion') {
                oacEls.maleSuggestion.classList.add('selected');
                setTimeout(() => oacNextFromCurrent(), 180);
                return;
            }

            if (action === 'pick-product') {
                oacEls.productTarget.classList.add('selected');
                setTimeout(() => oacNextFromCurrent(), 180);
                return;
            }

            if (action === 'add-cart') {
                oacEls.addBtn.textContent = '‚úì –î–æ–±–∞–≤–ª–µ–Ω–æ';
                oacEls.addBtn.classList.add('done');
                setTimeout(() => oacGoTo('completed'), 350);
            }
        }

        function oacBack() {
            if (oacCurrent === 'completed') {
                oacGoTo('add-cart');
                return;
            }
            const idx = oacGetIndex(oacCurrent);
            if (idx > 0) oacGoTo(oacOrder[idx - 1]);
        }

        function oacForward() {
            if (oacCurrent === 'completed') return;
            if (oacCurrent === 'pick-suggestion') return;
            const idx = oacGetIndex(oacCurrent);
            if (idx >= 0 && idx < oacOrder.length - 1) {
                oacGoTo(oacOrder[idx + 1]);
                return;
            }
            if (oacCurrent === 'add-cart') oacGoTo('completed');
        }

        oacEls.searchTrigger.addEventListener('click', () => oacHandle('open-search'));
        oacEls.maleSuggestion.addEventListener('click', () => oacHandle('pick-male-suggestion'));
        oacEls.productTarget.addEventListener('click', () => oacHandle('pick-product'));
        oacEls.addBtn.addEventListener('click', () => oacHandle('add-cart'));

        oacEls.prev.addEventListener('click', oacBack);
        oacEls.next.addEventListener('click', oacForward);
        oacEls.restart.addEventListener('click', () => oacGoTo('open-search'));

        oacEls.introStart.addEventListener('click', () => {
            if (oacStarted) return;
            oacStarted = true;
            oacEls.introScreen.classList.add('oac-hidden');
            oacEls.layout.classList.remove('is-hidden');
            oacGoTo('open-search');
        });

        window.addEventListener('resize', oacPositionHint);
        document.addEventListener('scroll', oacPositionHint, true);
