            progressTrack: document.getElementById('pv-progress-track'),
            step: document.getElementById('pv-step'),
            title: document.getElementById('pv-title'),
            description: document.getElementById('pv-description'),
            note: document.getElementById('pv-note'),
            nav: document.getElementById('pv-nav'),
            prev: document.getElementById('pv-prev'),
            next: document.getElementById('pv-next'),
            restart: document.getElementById('pv-restart')
        };

        let pvCurrentStep = 'up';
        let pvCurrentVolume = 42;
        let pvActiveHint = null;
        let pvPanelTimer = null;

        function pvGetStepIndex(stepKey) {
            return pvOrder.indexOf(stepKey);
        }

        function pvEnsureProgressSegments() {
            const count = pvOrder.length;
            pvElements.progressTrack.style.setProperty('--segments-count', String(count));

            if (pvElements.progressTrack.childElementCount === count) {
                return;
            }

            pvElements.progressTrack.innerHTML = '';
            for (let i = 0; i < count; i += 1) {
                const segment = document.createElement('span');
                segment.className = 'pv-progress-segment';
                pvElements.progressTrack.appendChild(segment);
            }
        }

        function pvUpdateProgress(stepKey) {
            pvEnsureProgressSegments();
            const segments = Array.from(pvElements.progressTrack.children);
            const isCompleted = stepKey === 'completed';
            const index = pvGetStepIndex(stepKey);
            const currentIndex = isCompleted ? pvOrder.length - 1 : index;

            segments.forEach((segment, segmentIndex) => {
                segment.classList.remove('is-complete', 'is-current');
                if (isCompleted || segmentIndex < currentIndex) {
                    segment.classList.add('is-complete');
                } else if (segmentIndex === currentIndex) {
                    segment.classList.add('is-current');
                }
            });
        }

        function pvRenderVolume() {
            pvElements.panelFill.style.height = `${pvCurrentVolume}%`;
            pvElements.panelLevel.textContent = `${pvCurrentVolume}%`;

            if (pvCurrentVolume <= 8) {
                pvElements.panelIcon.textContent = 'üîá';
            } else if (pvCurrentVolume <= 45) {
                pvElements.panelIcon.textContent = 'üîâ';
            } else {
                pvElements.panelIcon.textContent = 'üîä';
            }
        }

        function pvHidePanelLater() {
            if (pvPanelTimer) {
                clearTimeout(pvPanelTimer);
            }
            pvPanelTimer = setTimeout(() => {
                pvElements.panel.classList.remove('pv-visible');
                pvPanelTimer = null;
            }, 1300);
        }

        function pvShowPanel() {
            pvElements.panel.classList.add('pv-visible');
            pvHidePanelLater();
        }

        function pvSetVolume(value) {
            pvCurrentVolume = Math.max(0, Math.min(100, value));
            pvRenderVolume();
        }

        function pvPositionHint() {
            if (!pvActiveHint || !pvActiveHint.targetId) {
                pvElements.hint.style.display = 'none';
                return;
            }

            const target = document.getElementById(pvActiveHint.targetId);
            if (!target) {
                pvElements.hint.style.display = 'none';
                return;
            }

            const rect = target.getBoundingClientRect();
            if (!rect.width || !rect.height) {
                pvElements.hint.style.display = 'none';
                return;
            }

            const padding = Number(pvActiveHint.padding || 0);
            const radius = Number(pvActiveHint.radius || 14);

            pvElements.hint.style.display = 'block';
            pvElements.hint.style.left = `${rect.left - padding}px`;
            pvElements.hint.style.top = `${rect.top - padding}px`;
            pvElements.hint.style.width = `${rect.width + padding * 2}px`;
            pvElements.hint.style.height = `${rect.height + padding * 2}px`;
            pvElements.hint.style.borderRadius = `${radius}px`;
        }

        function pvApplyHint(hint) {
            if (!hint || !hint.targetId) {
                pvActiveHint = null;
                pvElements.hint.style.display = 'none';
                return;
            }

            pvActiveHint = {
                targetId: String(hint.targetId),
                radius: Number(hint.radius || 14),
                padding: Number(hint.padding || 0)
            };

            requestAnimationFrame(pvPositionHint);
            setTimeout(pvPositionHint, 0);
        }

        function pvUpdateInfo(stepKey) {
            const cfg = pvSteps[stepKey];
            pvElements.step.textContent = cfg.step;
            pvElements.title.textContent = cfg.title;
            pvElements.description.textContent = cfg.description;
            pvElements.note.textContent = cfg.note;

            if (stepKey === 'completed') {
                pvElements.nav.style.display = 'none';
                pvElements.restart.style.display = 'inline-flex';
            } else {
                pvElements.nav.style.display = 'grid';
                pvElements.restart.style.display = 'none';
                const stepIndex = pvGetStepIndex(stepKey);
                pvElements.prev.disabled = stepIndex <= 0;
                pvElements.next.disabled = false;
            }

            pvUpdateProgress(stepKey);
        }

        function pvApplyStep(stepKey) {
            const cfg = pvSteps[stepKey];
            pvSetVolume(cfg.volume);
            pvApplyHint(cfg.hint);
            pvUpdateInfo(stepKey);

            if (stepKey === 'completed') {
                setTimeout(() => {
                    pvElements.panel.classList.remove('pv-visible');
                }, 500);
            }
        }

        function pvGoToStep(stepKey) {
            if (!pvSteps[stepKey]) {
                return;
            }
            pvCurrentStep = stepKey;
            pvApplyStep(stepKey);
        }

        function pvHandleVolumePress(direction) {
            if (direction === 'up') {
                pvSetVolume(pvCurrentVolume + 18);
                pvShowPanel();
                if (pvCurrentStep === 'up') {
                    setTimeout(() => pvGoToStep('down'), 180);
                }
                return;
            }

            pvSetVolume(pvCurrentVolume - 20);
            pvShowPanel();
            if (pvCurrentStep === 'down') {
                setTimeout(() => pvGoToStep('completed'), 180);
            }
        }

        function pvGoBack() {
            if (pvCurrentStep === 'completed') {
                pvGoToStep('down');
                return;
            }

            const index = pvGetStepIndex(pvCurrentStep);
            if (index > 0) {
                pvGoToStep(pvOrder[index - 1]);
            }
        }

        function pvGoForward() {
            if (pvCurrentStep === 'completed') {
                return;
            }

            const index = pvGetStepIndex(pvCurrentStep);
            if (index >= 0 && index < pvOrder.length - 1) {
                pvGoToStep(pvOrder[index + 1]);
                return;
            }

            if (pvCurrentStep === 'down') {
                pvGoToStep('completed');
            }
        }

        function pvRestart() {
            pvGoToStep('up');
        }

        pvElements.volumeUp.addEventListener('click', () => pvHandleVolumePress('up'));
        pvElements.volumeDown.addEventListener('click', () => pvHandleVolumePress('down'));
        pvElements.prev.addEventListener('click', pvGoBack);
        pvElements.next.addEventListener('click', pvGoForward);
        pvElements.restart.addEventListener('click', pvRestart);

        window.addEventListener('resize', pvPositionHint);
        document.addEventListener('scroll', pvPositionHint, true);

        pvGoToStep('up');
    </script>
</div>
